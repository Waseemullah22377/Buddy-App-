<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    android:orientation="vertical"
    tools:context=".Screens.SignUpScreen">
<!--    #B71C1C          #F57F17              #BF360C-->

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            app:cardCornerRadius="140dp">

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@drawable/addimageicon" />
        </androidx.cardview.widget.CardView>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColorHint="@color/black"
                    android:background="@drawable/shap"
                    android:drawableStart="@drawable/baseline_person_24"
                    android:hint="Enter UserName"
                    android:padding="7dp"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/phnNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/shap"
                    android:drawableStart="@drawable/baseline_local_phone_24"
                    android:hint="Enter Phone Number"
                    android:padding="7dp"
                    android:textColorHint="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/Tvaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/shap"
                    android:drawableStart="@drawable/address"
                    android:hint="Enter Your Address"
                    android:padding="7dp"
                    android:textColorHint="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp"
                    android:textColorHint="@color/black"
                    android:background="@drawable/shap"
                    android:drawableStart="@drawable/emailicon"
                    android:hint="Enter Your E-mail"
                    android:inputType="textEmailAddress"
                    android:padding="7dp"
                    android:textSize="18sp" />


                <EditText
                    android:id="@+id/tvpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:textColorHint="@color/black"
                    android:layout_marginEnd="10dp"
                    android:drawableEnd="@drawable/show_password_icon"
                    android:background="@drawable/shap"
                    android:hint="Enter  Your password"
                    android:padding="7dp"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/btnRegSigup"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:textColorHint="@color/orange"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/shap"
                    android:drawableStart="@drawable/loginicon"
                    android:gravity="center"
                    android:hint="Register"
                    android:padding="7dp"
                    android:textSize="20sp" />

            </LinearLayout>
    </LinearLayout>

