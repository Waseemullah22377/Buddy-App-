<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="270dp"
        app:cardBackgroundColor="#EA7713"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#EA7713"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="140dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="10dp">


                <ImageView
                    android:id="@+id/layoutImgF"
                    android:layout_width="140dp"
                    android:layout_height="130dp"
                    android:layout_toRightOf="@+id/tvName"
                    android:scaleType="centerCrop" />


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvnameF"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/shap"
                android:drawableStart="@drawable/baseline_person_24"
                android:padding="7dp"
                android:text="Hotel/Building Name"
                android:textColor="@color/black"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/tvexpF"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:padding="5dp"
                android:text="Experience"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:visibility="gone" />


            <TextView
                android:id="@+id/tvContactF"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvexpF"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:drawableStart="@drawable/phone_call_outgoing_svgrepo_com"
                android:padding="5dp"
                android:text="contact"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:visibility="gone" />


            <TextView
                android:id="@+id/tvAdressF"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/shap"
                android:padding="7dp"
                android:text="Enter your Addres"
                android:textColor="@color/black"
                android:textSize="18sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/deleteF"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="110dp"
                    android:layout_marginTop="13dp"
                    android:src="@drawable/delet_icon" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>