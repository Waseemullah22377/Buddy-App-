<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <!--- #E3D4D4-->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        app:cardBackgroundColor="#EA7713"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#EA7713"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="130dp"
                android:layout_marginTop="4dp"
                android:layout_gravity="center"
                app:cardCornerRadius="10dp">


            <ImageView
                android:id="@+id/layoutImg"
                android:layout_width="160dp"
                android:layout_height="130dp"
                android:layout_toRightOf="@+id/tvName"
                android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:background="@drawable/shap"
                android:drawableStart="@drawable/baseline_person_24"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:text="driver Name"
                android:textSize="18sp" />



            <TextView
                android:id="@+id/tvModel"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvName"
                android:visibility="gone"
                android:textColor="@color/black"
                android:drawableStart="@drawable/address"
                android:padding="7dp"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:text="careModel"
                android:textSize="18sp" />



            <TextView
                android:id="@+id/tvContact"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvModel"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                android:visibility="gone"
                android:padding="5dp"
                android:drawableStart="@drawable/phone_call_outgoing_svgrepo_com"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:text="contact"
                android:textSize="18sp" />




            <TextView
                android:id="@+id/tvAdress"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:background="@drawable/shap"
                android:padding="7dp"
                android:layout_marginEnd="20dp"
                android:text="Address"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/address" />




<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

            <TextView
                android:id="@+id/View"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="View"
                android:gravity="center"
                android:backgroundTint="#FAF5EA17"
                android:background="@drawable/tv_bg2"
                android:padding="2dp"
                android:textColor="@color/black"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:textSize="18sp" />


   </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>