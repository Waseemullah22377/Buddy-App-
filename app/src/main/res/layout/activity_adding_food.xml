<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".userAddingData.AddingAccomodation">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/read"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="Add Your Food Menu"
        android:textSize="30sp"
        android:textStyle="bold|italic" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:backgroundTint="@color/read"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/read"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/FoodName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:drawableStart="@drawable/baseline_person_24"
                android:background="@drawable/shap"
                android:hint="Enter Your Name"
                android:padding="7dp"
                android:textColorHint="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/FoodExpe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/shap"
                android:padding="7dp"
                android:textSize="18sp"
                android:textColorHint="@color/black"
                android:hint="Add Your Cooking Experience"
                />

            <EditText
                android:id="@+id/Foodcontact"
                android:hint="contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableStart="@drawable/phone_call_outgoing_svgrepo_com"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/shap"
                android:padding="7dp"
                android:textSize="18sp"
                android:textColorHint="@color/black" />

            <EditText
                android:id="@+id/Foodaddress"
                android:hint="Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:drawableStart="@drawable/address"
                android:layout_marginEnd="10dp"
                android:background="@drawable/shap"
                android:padding="7dp"
                android:textSize="18sp"
                android:textColorHint="@color/black"/>

            <ImageView
                android:id="@+id/Foodimg"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:onClick="insertImage"
                android:src="@drawable/addimageicon"
                android:background="@drawable/imagebg2"
                />


            <TextView
                android:id="@+id/addFoodData"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/shap"
                android:gravity="center"
                android:text="Add"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="22sp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>